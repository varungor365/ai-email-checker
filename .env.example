# Environment Configuration
# Copy this file to .env and fill in your API keys and settings

# ============================================================================
# CORE SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_email_checker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB (Results & Documents)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=ai_email_checker_results
MONGO_USER=
MONGO_PASSWORD=

# Redis (Task Queue & Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================================================
# AI & ML CONFIGURATION
# ============================================================================
# Enable/Disable AI Features
AI_ENABLED=true
LLM_ENABLED=true

# Ollama (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# Decision Engine
DECISION_ENGINE_LEARNING=true
ML_MODEL_PATH=./models/decision_model.pkl

# ============================================================================
# PROXY CONFIGURATION
# ============================================================================
# Proxy Management
MIN_PROXIES=10
MAX_PROXIES=100
AUTO_SCALE_PROXIES=true
HEALTH_CHECK_INTERVAL=300

# Bright Data (Premium Residential Proxies)
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
BRIGHTDATA_HOST=

# Smartproxy
SMARTPROXY_USERNAME=
SMARTPROXY_PASSWORD=
SMARTPROXY_ENDPOINT=

# Oxylabs
OXYLABS_USERNAME=
OXYLABS_PASSWORD=

# ============================================================================
# OSINT & INTELLIGENCE APIS
# ============================================================================
# Dehashed
DEHASHED_API_KEY=
DEHASHED_EMAIL=

# IntelX
INTELX_API_KEY=

# BreachDirectory
BREACHDIRECTORY_API_KEY=

# Have I Been Pwned
HIBP_API_KEY=

# Shodan (for IP/Domain intelligence)
SHODAN_API_KEY=

# Hunter.io (Email verification)
HUNTER_API_KEY=

# ============================================================================
# CAPTCHA SOLVING SERVICES
# ============================================================================
# 2Captcha
TWOCAPTCHA_API_KEY=

# Anti-Captcha
ANTICAPTCHA_API_KEY=

# CapMonster
CAPMONSTER_API_KEY=

# ============================================================================
# TARGET SERVICE CONFIGURATION
# ============================================================================
# Default services to check
DEFAULT_SERVICES=mega,dropbox,pcloud,instagram,twitter

# Service-specific settings
# MEGA
MEGA_MAX_ATTEMPTS=5
MEGA_PROXY_TYPE=residential
MEGA_RATE_LIMIT=10

# Dropbox
DROPBOX_MAX_ATTEMPTS=3
DROPBOX_PROXY_TYPE=residential

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================
# Result Vault Encryption
VAULT_ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
VAULT_BACKUP_ENABLED=true

# Session Security
SESSION_SECRET=your-session-secret-key
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600

# ============================================================================
# MONITORING & ALERTING
# ============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Sentry (Error Tracking)
SENTRY_DSN=

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhooks
DISCORD_WEBHOOK_URL=

# Email Alerts
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# RATE LIMITING & PERFORMANCE
# ============================================================================
# Worker Configuration
MAX_WORKERS=10
TASKS_PER_WORKER=5
WORKER_TIMEOUT=300

# Rate Limiting
GLOBAL_RATE_LIMIT=100
PER_SERVICE_RATE_LIMIT=10
RATE_LIMIT_WINDOW=60

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_MULTIPLIER=2
RETRY_MAX_DELAY=60

# ============================================================================
# BROWSER AUTOMATION
# ============================================================================
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
MAX_BROWSER_INSTANCES=5

# Stealth Mode
STEALTH_MODE=true
RANDOMIZE_FINGERPRINTS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_OSINT_ENABLED=true
FEATURE_PASSWORD_MUTATION=true
FEATURE_LLM_PASSWORDS=true
FEATURE_ACCOUNT_DISCOVERY=true
FEATURE_SESSION_PERSISTENCE=true
FEATURE_AUTO_SCALING=true

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Testing Mode (limits actual API calls)
TESTING_MODE=false
DRY_RUN=false

# Mock Services
MOCK_CAPTCHA_SOLVER=false
MOCK_PROXY_MANAGER=false
MOCK_OSINT_APIS=false
